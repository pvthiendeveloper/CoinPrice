<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.CoinPrice.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TextAppearance.CoinPrice.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.CoinPrice.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.CoinPrice.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">@dimen/font_x_larger</item>
    </style>

    <style name="TextAppearance.CoinPrice.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/os_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.CoinPrice.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/os_regular</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.CoinPrice.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/os_regular</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.CoinPrice.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/os_regular</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- Text input style -->
    <style name="CoinPrice.TextInputLayout.Filled" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="shapeAppearance">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CoinPrice.TextInputLayout.Filled.Primary" parent="CoinPrice.TextInputLayout.Filled">
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="CoinPrice.TextInput.Filled" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/os_regular</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CoinPrice.TextInput.Filled.Primary" parent="CoinPrice.TextInput.Filled">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- End text input style -->

    <!-- Button style -->
    <style name="CoinPrice.Button.Contained" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CoinPrice.Button.Contained.Primary" parent="CoinPrice.Button.Contained">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/mirage</item>
    </style>

    <style name="CoinPrice.Button.Contained.Madang" parent="CoinPrice.Button.Contained">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/madang</item>
    </style>
    <!-- End button style -->
</resources>